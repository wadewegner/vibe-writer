<%- include('partials/header') %>

<div class="container mt-5">
  <h1 class="display-4">What's New?</h1>
  <hr>
  <div id="changelog-entries">
    <% changelog.forEach(entry => { %>
      <div class="mb-4">
        <h4><%= entry.title %></h4>
        <p class="text-muted"><%= new Date(entry.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></p>
        <p><%= entry.summary %></p>
        <% entry.tags.forEach(tag => { %>
          <% let badgeClass = 'bg-secondary'; %>
          <% if (tag === 'New Feature') badgeClass = 'bg-primary'; %>
          <% if (tag === 'Improvement') badgeClass = 'bg-success'; %>
          <% if (tag === 'Bug Fix') badgeClass = 'bg-danger'; %>
          <span class="badge <%= badgeClass %>"><%= tag %></span>
        <% }); %>
      </div>
      <hr>
    <% }); %>
  </div>
</div>

<%- include('partials/footer') %> 