<%- include('partials/header') %>

<main class="landing-page">
  <section class="hero-section">
      <div class="container">
          <a href="/"><img src="/img/vibewriter-logo.png" alt="VibeWriter Home" class="logo"></a>
          <h1 class="hero-title">What's New?</h1>
      </div>
  </section>

  <section class="support-content-section">
    <div class="container" id="changelog-entries">
      <% changelog.forEach(entry => { %>
        <div class="card mb-4 shadow-sm">
          <div class="card-body">
            <h6 class="card-subtitle mb-1 text-muted"><%= new Date(entry.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></h6>
            <h4 class="card-title font-weight-bold">
              <%= entry.title %>
              <% entry.tags.forEach(tag => { %>
                <% let tagClass = ''; %>
                <% if (tag === 'New Feature') tagClass = 'changelog-tag-new'; %>
                <% if (tag === 'Improvement') tagClass = 'changelog-tag-improvement'; %>
                <% if (tag === 'Bug Fix') tagClass = 'changelog-tag-fix'; %>
                <span class="changelog-tag <%= tagClass %> ml-2"><%= tag %></span>
              <% }); %>
            </h4>
            <p class="card-text mt-1"><%= entry.summary %></p>
          </div>
        </div>
      <% }); %>
    </div>
  </section>
</main>

<%- include('partials/footer') %> 